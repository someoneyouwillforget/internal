-- [[ INTERNAL v2 TEST ]] --
local Internal = loadstring(game:HttpGet("https://raw.githubusercontent.com/someoneyouwillforget/internal/main/source/main.lua"))()

local Win = Internal:CreateWindow({
    Name = "INTERNAL TESTING Signed - K"
})

-- TAB 1: COMBAT (Check Alignment & Toggle Font)
local Combat = Win:CreateTab("Toggles")

Combat:CreateToggle({
    Name = "Testing",
    CurrentValue = false,
    Callback = function(state)
        print("Testing:", state)
    end
})

Combat:CreateSlider({
    Name = "This is a slider",
    Min = 5,
    Max = 50,
    Default = 15,
    Callback = function(val)
        print("Slider:", val)
    end
})

-- TAB 2
local Visuals = Win:CreateTab("Visuals")

Visuals:CreateDropdown({
    Name = "Dropdown",
    Options = {"Test", "Test 2", "Test 3", "Test 4", "Test 5"},
    Default = "Test",
    Callback = function(choice)
        print("Testing:", choice)
    end
})

Visuals:CreateToggle({
    Name = "Show Teamates",
    CurrentValue = true,
    Callback = function(v) end
})

-- TAB 3
local Settings = Win:CreateTab("Settings")

Settings:CreateButton({
    Name = "Destroy UI",
    Callback = function()
        print("Cleaning up...")
    end
})

Settings:CreateButton({
    Name = "Copy Config",
    Callback = function()
        setclipboard("Internal Config: {v13}")
    end
})

print("Testing Script Loaded. Verify alignment and toggle font now.")
